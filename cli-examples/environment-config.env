# Spydr Environment Configuration
# Copy this file to .env and modify as needed

# Browser selection: chromium, firefox, webkit
SPYDR_BROWSER=chromium

# Custom user agent string
SPYDR_USER_AGENT="Mozilla/5.0 (compatible; SpydrBot/1.0; +https://github.com/yourusername/spydr)"

# Run in headless mode (true/false)
SPYDR_HEADLESS=true

# Navigation timeout in milliseconds
SPYDR_TIMEOUT=30000

# Viewport size (width x height)
SPYDR_VIEWPORT=1920x1080

# Device emulation (optional, overrides viewport)
# Examples: "iPhone 12", "iPad Pro", "Galaxy S21", "Pixel 5"
# SPYDR_DEVICE="iPhone 12"

# Browser locale
SPYDR_LOCALE=en-US

# Browser timezone
SPYDR_TIMEZONE=America/New_York

# Proxy server (optional)
# Examples:
# SPYDR_PROXY="http://proxy.example.com:8080"
# SPYDR_PROXY="http://username:password@proxy.example.com:8080"
# SPYDR_PROXY="socks5://proxy.example.com:1080"